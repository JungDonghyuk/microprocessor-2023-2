#include <SPI.h>
#include <Servo.h>

volatile uint8_t RECEIVED;
volatile uint8_t PRE_RECEIVED;
Servo servo[8]; 

void setup() {
  SPI.begin();
  Serial.begin(9600);
  SPI.attachInterrupt();
  DDRB |= 0xFF;
  pinMode(MISO, OUTPUT);
  pinMode(MOSI, INPUT);
  pinMode(SCK, INPUT);
  pinMode(SS, INPUT);

  SPCR |= (1<<SPIE)| (1<<SPE) | (0 << SPR1) | (1<<SPR0);
  SPCR &= ~(1<<MSTR);
  for (int i =0; i < 8; i++){
    servo[i].attach(i);
    }
}

ISR (SPI_STC_vect) {
  DDRD = 0xFF;
  RECEIVED = (SPDR);


  //PORTD = RECEIVED; 
  for(int i=0; i < 8; i++) {
    uint8_t OLD = (PRE_RECEIVED >> i )& 0x1;
    uint8_t NEW = (RECEIVED >> i) & 0x1;
    if (PRE_RECEIVED != RECEIVED){
      servo[i].write(180);
    } 
    else {
      servo[i].write(0);
    }
  }
}


void loop(){

}
