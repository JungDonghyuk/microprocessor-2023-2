#include <EEPROM.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);  

// TIMER 멈춘 값 NEW_RECORD로 지정해주고,
uint16_t NEW_RECORD = min*1000 + sec*10 + deci_sec;
uint16_t OLD_RECORD;
uint8_t address = 0; 

void setup() {
  lcd.begin(16, 2);  
  
  EEPROM.get(address, OLD_RECORD);
  
  if(OLD_RECORD != 0) {
    if(OLD_RECORD > NEW_RECORD) {
      EEPROM.put(address, NEW_RECORD);
      lcd.setCursor(6,0);  
      lcd.print("NEW SCORE");
      lcd.setCursor(6,1);  
      lcd.print(NEW_RECORD);  
    }
    else if(OLD_RECORD == NEW_RECORD) {
      EEPROM.put(address, NEW_RECORD);
    }
    else if {
      lcd.setCursor(6,0);  
      lcd.print("FAIL");
    }
  } 
  else {
    EEPROM.put(address, NEW_RECORD);
    lcd.setCursor(6,0);  
    lcd.print("NEW SCORE");
    lcd.setCursor(6,1);  
    lcd.print(NEW_RECORD);  
  }
}

void loop() {
}
