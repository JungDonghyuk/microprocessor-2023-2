//일단 먼저 주소 확인 필요함
#include <LiquidCrystal_I2C.h>
#include <Wire.h>

//주소확인 후에 0x27 수정하기
LiquidCrystal_I2C lcd(0x27, 16, 2);


void setup() {
	lcd.init();
	lcd.backlight();
  Serial.begin(9600);
}

//여따가 이제 그 조도센서 조건 값 추가하면 됨, 지금은 시리얼 모니터에 쓰는 값으로 입력하는 것임.
void loop() { 
    int value = Serial.parseInt();
    Serial.println(value);
    if (value == 1) {
		
		lcd.setCursor(0,0);		    		
		lcd.print("Congratulation!");  
    }
    
    else if (value == 2) {
		lcd.setCursor(0,1);		    
		lcd.print("     Fail!      ");   
    }
   
  
	delay(1000);
	
	lcd.clear();
}
